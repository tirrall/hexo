 // 自定义的页脚微信订阅号样式
.QQ-box {
    position: absolute;
    bottom: 20px;
    left: 156px;
    border-radius: 5px;
    box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.35);
}
.QQ-menu {
    position: relative;
    height: 28px;
    width: 28px;
    cursor: pointer;
    background: url(/images/qq.svg);
    background-size: 28px 28px;
}
.QQ-hover {
    position: absolute;
    bottom: 0px;
    left: 0px;
    height: 0px;
    width: 0px;
    border-radius: 3px;
    box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.35);
    background: url(/images/MYQQ.svg);
    background-color: #fff;
    background-repeat: no-repeat;
    background-size: 150px 150px;
    transition: all 0.35s ease-in-out;
    z-index: 1024;
    opacity: 0;
}
.QQ-menu:hover .QQ-hover {
    bottom: 24px;
    left: 24px;
    height: 170px;
    width: 150px;
    opacity: 1;
}
.QQ-description {
    opacity: 0;
    position: absolute;
    bottom: 3%;
    left: 5%;
    right: 5%;
    font-size: 12px;
    transition: all 0.35s cubic-bezier(1, 0, 0, 1);
}
.QQ-menu:hover .QQ-description {
    opacity: 1;
}